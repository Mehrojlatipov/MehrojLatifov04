1)<?php
$a = readline(); if($a > 0){
echo $a + 1;
} else{
echo $a;
}
?>


2)   <?php
$a = readline("a="); if($a > 0){
echo $a + 1;
} else{
echo $a-2;
}
?>

3)   <?php
$a = readline("a="); if($a > 0){
echo $a + 1;
} else if($a < 0){ echo $a-2;
} else {
echo "10";
}
?>

4)   <?php
$a = readline("a=");
$b = readline("b=");
$c = readline("c=");
$ctrl=0;
if($a > 0) { $ctrl=$ctrl+1;}; if($b > 0) { $ctrl=$ctrl+1;};
 
if($c > 0) { $ctrl=$ctrl+1;}; echo "musbat sonlar soni="; echo $ctrl." ta";
?>

5)  <?php
$a = readline("a=");
$b = readline("b=");
$c = readline("c=");
$ctrl=0; $t=0;
if($a > 0) { $ctrl=$ctrl+1;}; if($b > 0) { $ctrl=$ctrl+1;}; if($c > 0) { $ctrl=$ctrl+1;}; if($a < 0) { $t++;};
if($b < 0) { $t++;};
if($c < 0) { $t++;};
echo "musbat sonlar soni="; echo $ctrl." ta".PHP_EOL; echo "manfiy sonlar soni="; echo $t." ta";
?>

6)  <?php
$a = readline("a=");
$b = readline("b="); if($a>$b) echo $a; else echo $b;
?>

7)   <?php
$a = readline("a=");
$b = readline("b="); if($a>$b) echo " 2 ";
else if($a<$b) echo " 1 ";
else echo " bu sonlar o'zaro teng";
?>


8)   <?php
$a = readline("a=");
$b = readline("b=");
if($a>$b) echo $a.PHP_EOL.$b; else if($a<$b) echo $b.PHP_EOL.$a; else echo " bu sonlar o'zaro teng";
?>
